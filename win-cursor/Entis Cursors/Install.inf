; Entis Cursor Set
; Right click on the file "Install.inf" and select "Install". Then in the Mouse control panel apply Entis cursors.

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

; -- Installed files

[Scheme.Cur]
alternate.ani
arrow.ani
background.ani
busy.ani
forbidden.ani
help.ani
horizontal.ani
Install.inf
link.ani
move.ani
pencil.ani
precision.ani
resize_down_left.ani
resize_down_right.ani
text.ani
vertical.ani

[Scheme.Txt]
readme.txt

[Strings]
CUR_DIR       = "Cursors\Entis Cursors"
SCHEME_NAME   = "Entis Cursors"
pointer       = "arrow.ani"
help          = "help.ani"
work          = "background.ani"
busy          = "busy.ani"
text          = "text.ani"
unavailiable  = "forbidden.ani"
vert          = "vertical.ani"
horz          = "horizontal.ani"
dgn1          = "resize_down_right.ani"
dgn2          = "resize_down_left.ani"
move          = "move.ani"
link          = "link.ani"
cross         = "precision.ani"
hand          = "pencil.ani"
alternate     = "alternate.ani"
